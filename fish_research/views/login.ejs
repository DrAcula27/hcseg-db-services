<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head", { title: "Login - HCSEG - Fish Research" }) %>
    <link rel="stylesheet" href="/css/auth.css" />
    <script src="/js/auth.js" defer></script>
  </head>
  <body>
    <div class="login-container">
      <%- include("./partials/header-auth", { authTitle: "Welcome Back" }) %>

      <% if (typeof error !== 'undefined' && error) { %>
      <div class="msg error-msg"><%= error %></div>
      <% } %>

      <form action="/auth/login" method="POST" id="login-form">
        <div class="form-group">
          <label for="username">Username</label>
          <input
            type="text"
            id="username"
            name="username"
            required
            autofocus
            placeholder="Enter your username"
          />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            placeholder="Enter your password"
          />
          <div class="btn-container">
            <div class="btn btn-toggle-show-password">
              <span id="toggle-show-password">show</span> password
            </div>
          </div>
        </div>

        <div class="btn-container">
          <a href="/auth/reset-password" class="btn btn-link">
            Forgot Password?
          </a>
        </div>

        <div class="container">
          <button type="submit" class="btn btn-login">Log In</button>
        </div>
      </form>

      <%- include("./partials/footer", { pageType: "Secure Access" }) %>
    </div>
  </body>
</html>
